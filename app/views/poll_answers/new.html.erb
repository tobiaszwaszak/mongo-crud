<h1>New answer for poll</h1>

<%= form_with(model: [@poll, @answer]) do |form| %>
    <% if @answer.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this poll from being saved:</h2>

        <ul>
          <% @answer.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :answer, style: "display: block" %>
      <%= form.text_field :answer %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>


<br>

<div>
  <%= link_to "Back to poll", poll_path(@poll) %>
</div>
